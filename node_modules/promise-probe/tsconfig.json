{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"declaration": false,
		"noImplicitAny": false,
		"removeComments": true,
		"noLib": false,
		"noImplicitUseStrict": true,
		"sourceMap": true,
		"strictNullChecks": false
	},
	"exclude": [
		"node_modules"
	],
	"linterOptions": {
		"exclude": [
			"node_modules/**/*.{j,t}s"
		]
	}
}